{
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "collectCoverageFrom": [
    "src/**/*.js",
    "!**/node_modules/**"
  ],
  "notify": true,
  "setupTestFrameworkScriptFile": "unit-tests/setup.js",
  "testPathDirs": [
    "unit-tests/test/"
  ],
  "moduleDirectories": [
    "node_modules",
    "."
  ]
}
